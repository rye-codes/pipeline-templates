pipeline {
  agent {
    kubernetes {
      defaultContainer 'maven'
      yaml """---
apiVersion: "v1"
kind: "Pod"
spec:
  containers:
  - name: jnlp
  - name: maven
    image: ${maven_image}
    command:
    - cat
    tty: true
"""
    }
  }

  stages {
    stage('Build') {
      steps {
        echo 'mvn -DskipTests=true package'
      }
    }

    stage('CheckStyle') {
      steps {
        echo 'mvn -DskipTests=true verify'
      }
    }

    stage('Unit Tests') {
      steps {
        echo 'mvn test'
      }
    }

    stage('Integration Tests') {
      steps {
        echo 'mvn integration-test'
      }
    }

    stage('Deploy') {
      steps {
        echo "mvn -DskipTests=true deploy"
      }
    }
  }
}
