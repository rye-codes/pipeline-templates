pipeline {
  agent {
    kubernetes {
      yaml """---
apiVersion: "v1"
kind: "Pod"
spec:
  containers:
  - name: jnlp
  - name: jdk
    image: ${jdk_image}
    command:
    - cat
    tty: true
"""
    }
  }

  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }

  stages {
    stage('Build') {
      steps {
        container('jdk') {
          sh 'mvn package'
        }
      }
    }

    stage('Deploy') {
      steps {
        container('jdk') {
          echo "deploy"
        }
      }
    }
  }
}
